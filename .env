# === Database Configuration ===

# Use PostgreSQL
# PostgreSQL example
DATABASE_URL=postgresql://crop_user:crop_pass@disc-bihan-postgres-server.postgres.database.azure.com:5432/crop_target_dev?sslmode=require


# === Server Configuration ===
ENVIRONMENT=development   # or "production"
DEBUG=true
APP_HOST = 127.0.0.1          
USE_HTTPS=false                     # Set to "true" to enable HTTPS
HTTP_PORT=8000                      # Port for HTTP
HTTPS_PORT=8443                    # Port for HTTPS (used if USE_HTTPS=true)

# Security Configuration
JWT_SECRET_KEY=your-very-secret-key 
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Logging
LOG_LEVEL=INFO


# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_PROTOCOL=http


# === CORS Configuration ===

# When USE_HTTPS=true
# For HTTPS frontend

CORS_ORIGINS_HTTPS=https://localhost:3000

# For HTTP frontend
CORS_ORIGINS_HTTP=http://localhost:3000,http://127.0.0.1:3000



# === SSL Certificates ===
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem